# =============================================================================
# Yishan API - 环境变量配置模板
# 基于项目实际使用的配置项
# =============================================================================

# 服务器配置
PORT=3000
NODE_ENV=development
HOST=localhost
FASTIFY_CLOSE_GRACE_DELAY=1000
LOG_LEVEL=info

# =============================================================================
# 数据库配置 - MySQL
# =============================================================================

# 数据库连接
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=yishan-admin
MYSQL_USER=root
MYSQL_PASSWORD=123456

# 数据库操作权限（生产环境建议设为 0）
CAN_CREATE_DATABASE=0    # 0=禁止，1=允许
CAN_DROP_DATABASE=0      # 0=禁止，1=允许
CAN_SEED_DATABASE=0      # 0=禁止，1=允许

# =============================================================================
# 安全配置
# =============================================================================

# Cookie 安全设置
COOKIE_SECRET=your-secret-key-here-change-this
COOKIE_NAME=yishan-session
COOKIE_SECURED=false    # 生产环境设为 true

# API 速率限制
RATE_LIMIT_MAX=100      # 每分钟最大请求数

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# 文件上传配置
# =============================================================================

UPLOAD_DIRNAME=uploads              # 通用上传文件目录
UPLOAD_TASKS_DIRNAME=tasks          # 任务相关文件上传目录

# =============================================================================
# Redis 缓存配置（可选）
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=                     # 如无密码请留空
REDIS_DB=0                          # Redis 数据库编号
CACHE_TTL=3600                      # 缓存过期时间（秒）

# =============================================================================
# CORS 配置
# =============================================================================

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# 系统管理配置
# =============================================================================

# 系统清理 API 密钥（生产环境必须修改）
CLEANUP_API_KEY=your-cleanup-api-key-change-this-in-production

# 默认管理员密码（仅初始化时使用）
DEFAULT_ADMIN_PASSWORD=admin123