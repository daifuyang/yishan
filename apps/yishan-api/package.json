{
  "name": "yishan-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "type": "commonjs",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "db:generate": "npx prisma generate",
    "db:init": "npx prisma migrate dev --name init",
    "db:seed": "npm run build:ts && node dist/scripts/seed.js",
    "db:reset": "npx prisma migrate reset && npm run db:init && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/static": "^8.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@prisma/adapter-mariadb": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@sinclair/typebox": "^0.34.41",
    "close-with-grace": "^2.3.0",
    "dayjs": "^1.11.18",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "qiniu": "^7.14.0"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "dotenv": "^17.2.3",
    "fastify-tsconfig": "^3.0.0",
    "prisma": "^7.1.0",
    "ts-node": "^10.4.0",
    "typescript": "~5.8.2",
    "vitest": "^4.0.7"
  }
}
