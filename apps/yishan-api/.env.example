# 数据库配置
DATABASE_URL="mysql://root:root@localhost:3306/fastify_prisma"

# JWT 配置
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Token 过期时间配置（秒）
# 访问令牌过期时间（默认24小时）
JWT_ACCESS_TOKEN_EXPIRES_IN=86400

# 刷新令牌过期时间（默认7天）
JWT_REFRESH_TOKEN_EXPIRES_IN=604800

# 记住我功能下的过期时间（秒）
# 访问令牌过期时间（默认30天）
JWT_ACCESS_TOKEN_REMEMBER_ME_EXPIRES_IN=2592000

# 刷新令牌过期时间（默认90天）
JWT_REFRESH_TOKEN_REMEMBER_ME_EXPIRES_IN=7776000

# Redis 配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 应用配置
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# 定时任务配置
# 定时任务访问令牌，用于调用系统管理接口
CRON_TOKEN=your-cron-token-change-this-in-production
# 缓存 TTL（秒），用于用户详情缓存，默认 300 秒
USER_DETAIL_CACHE_TTL=300

# 全局缓存 TTL（秒），系统级默认TTL
CACHE_TTL_DEFAULT=300

# 用户详情缓存 TTL（秒），优先级高于 USER_DETAIL_CACHE_TTL；未设置则回退到全局TTL
CACHE_TTL_USER_DETAIL=300
