NODE_ENV=development
PORT=3000
LOG_LEVEL=info
FASTIFY_CLOSE_GRACE_DELAY=500
DEBUG_MODE=0

# 数据库配置
DATABASE_URL="mysql://root:your-password@localhost:3306/yishan"

DATABASE_USER="root"
DATABASE_PASSWORD="your-password"
DATABASE_NAME="yishan-medical"
DATABASE_HOST="localhost"
DATABASE_PORT=3306

# JWT 配置
JWT_SECRET="your-jwt-secret-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Token 过期时间配置（秒）
# 访问令牌过期时间（默认24小时）
JWT_ACCESS_TOKEN_EXPIRES_IN=86400

# 刷新令牌过期时间（默认7天）
JWT_REFRESH_TOKEN_EXPIRES_IN=604800

# 记住我功能下的过期时间（秒）
# 访问令牌过期时间（默认30天）
JWT_ACCESS_TOKEN_REMEMBER_ME_EXPIRES_IN=2592000

# 刷新令牌过期时间（默认90天）
JWT_REFRESH_TOKEN_REMEMBER_ME_EXPIRES_IN=7776000

MAX_LOGIN_FAILED_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=3600

# Redis 配置（可选）
REDIS_URL="redis://:password@localhost:6379/0"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0

# 定时任务配置
# 定时任务访问令牌，用于调用系统管理接口
CRON_TOKEN="cron-token-2025-production"

# 全局缓存 TTL（秒），系统级默认TTL
CACHE_TTL_DEFAULT=86400

# UPLOAD_DIR
UPLOAD_DIR=public/uploads

QINIU_AK=
QINIU_SK=
QINIU_BUCKET=
QINIU_EXPIRES=3600
QINIU_UPLOAD_URL=
