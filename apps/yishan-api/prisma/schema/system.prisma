model SysAttachment {
  id           Int       @id @default(autoincrement()) @map("id")
  folderId     Int?      @map("folder_id")
  kind         Int       @default(4) @map("kind") @db.TinyInt
  name         String?   @map("name") @db.VarChar(255)
  originalName String    @map("original_name") @db.VarChar(255)
  filename     String    @map("filename") @db.VarChar(255)
  ext          String?   @map("ext") @db.VarChar(20)
  mimeType     String    @map("mime_type") @db.VarChar(100)
  size         Int       @default(0) @map("size")
  storage      String    @default("local") @map("storage") @db.VarChar(20)
  path         String?   @map("path") @db.VarChar(500)
  url          String?   @map("url") @db.VarChar(500)
  objectKey    String?   @map("object_key") @db.VarChar(500)
  hash         String?   @map("hash") @db.VarChar(64)
  width        Int?      @map("width")
  height       Int?      @map("height")
  duration     Int?      @map("duration")
  metadata     Json?     @map("metadata")
  status       Int       @default(1) @map("status") @db.TinyInt
  creatorId    Int?      @map("creator_id")
  createdAt    DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updaterId    Int?      @map("updater_id")
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt    DateTime? @map("deleted_at") @db.DateTime(0)
  version      Int       @default(1) @map("version")

  folder  SysAttachmentFolder? @relation(fields: [folderId], references: [id], onUpdate: NoAction, onDelete: SetNull)
  creator SysUser?             @relation("AttachmentCreator", fields: [creatorId], references: [id], onUpdate: NoAction, onDelete: SetNull)
  updater SysUser?             @relation("AttachmentUpdater", fields: [updaterId], references: [id], onUpdate: NoAction, onDelete: SetNull)

  @@unique([hash, storage], map: "uniq_attachment_hash_storage")
  @@index([folderId], map: "idx_attachment_folder_id")
  @@index([kind], map: "idx_attachment_kind")
  @@index([mimeType], map: "idx_attachment_mime_type")
  @@index([storage], map: "idx_attachment_storage")
  @@index([status], map: "idx_attachment_status")
  @@index([createdAt], map: "idx_attachment_created_at")
  @@index([deletedAt], map: "idx_attachment_deleted_at")
  @@index([creatorId])
  @@index([updaterId])
  @@map("sys_attachment")
}
