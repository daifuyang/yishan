// System & core models

model SysOption {
  id          Int       @id @default(autoincrement()) @map("id")
  key         String    @unique @map("key") @db.VarChar(100)
  value       String?   @map("value") @db.Text
  description String?   @map("description") @db.VarChar(255)
  status      Int       @default(1) @map("status") @db.TinyInt
  creatorId   Int?      @map("creator_id")
  createdAt   DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updaterId   Int?      @map("updater_id")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt   DateTime? @map("deleted_at") @db.DateTime(0)
  version     Int       @default(1) @map("version")

  @@index([key], map: "idx_option_key")
  @@index([status], map: "idx_option_status")
  @@index([deletedAt], map: "idx_option_deleted_at")
  @@map("sys_option")
}

model SysUser {
  id            Int       @id @default(autoincrement()) @map("id")
  username      String?   @unique @map("username") @db.VarChar(50)
  email         String?   @unique @map("email") @db.VarChar(100)
  phone         String    @unique @map("phone") @db.VarChar(20)
  passwordHash  String    @map("password_hash") @db.VarChar(255)
  realName      String?   @map("real_name") @db.VarChar(50)
  nickname      String?   @map("nickname") @db.VarChar(50)
  avatar        String?   @map("avatar") @db.VarChar(500)
  gender        Int       @default(0) @map("gender") @db.TinyInt
  birthDate     DateTime? @map("birth_date") @db.Date
  status        Int       @default(1) @map("status") @db.TinyInt
  lastLoginTime DateTime? @map("last_login_time") @db.DateTime(0)
  lastLoginIp   String?   @map("last_login_ip") @db.VarChar(45)
  loginCount    Int       @default(0) @map("login_count")
  creatorId     Int       @map("creator_id")
  createdAt     DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updaterId     Int       @map("updater_id")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt     DateTime? @map("deleted_at") @db.DateTime(0)
  version       Int       @default(1) @map("version")

  creator      SysUser   @relation("UserCreator", fields: [creatorId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  createdUsers SysUser[] @relation("UserCreator")
  updater      SysUser   @relation("UserUpdater", fields: [updaterId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  updatedUsers SysUser[] @relation("UserUpdater")

  tokens    SysUserToken[]
  userRoles SysUserRole[]
  userDepts SysUserDept[]

  rolesCreated SysRole[] @relation("RoleCreator")
  rolesUpdated SysRole[] @relation("RoleUpdater")

  leaderDepts  SysDept[] @relation("DeptLeader")
  createdDepts SysDept[] @relation("DeptCreator")
  updatedDepts SysDept[] @relation("DeptUpdater")

  postsCreated SysPost[] @relation("PostCreator")
  postsUpdated SysPost[] @relation("PostUpdater")

  menusCreated SysMenu[] @relation("MenuCreator")
  menusUpdated SysMenu[] @relation("MenuUpdater")

  dictTypesCreated SysDictType[] @relation("DictTypeCreator")
  dictTypesUpdated SysDictType[] @relation("DictTypeUpdater")
  dictDatasCreated SysDictData[] @relation("DictDataCreator")
  dictDatasUpdated SysDictData[] @relation("DictDataUpdater")

  // Portal reverse relations
  portalCategoriesCreated PortalCategory[] @relation("PortalCategoryCreator")
  portalCategoriesUpdated PortalCategory[] @relation("PortalCategoryUpdater")
  portalArticlesCreated   PortalArticle[]  @relation("PortalArticleCreator")
  portalArticlesUpdated   PortalArticle[]  @relation("PortalArticleUpdater")
  portalPagesCreated      PortalPage[]     @relation("PortalPageCreator")
  portalPagesUpdated      PortalPage[]     @relation("PortalPageUpdater")
  // PortalTemplate 反向关系（用于模板的创建与更新人）
  portalTemplatesCreated  PortalTemplate[] @relation("PortalTemplateCreator")
  portalTemplatesUpdated  PortalTemplate[] @relation("PortalTemplateUpdater")

  attachmentsCreated SysAttachment[] @relation("AttachmentCreator")
  attachmentsUpdated SysAttachment[] @relation("AttachmentUpdater")

  attachmentFoldersCreated SysAttachmentFolder[] @relation("AttachmentFolderCreator")
  attachmentFoldersUpdated SysAttachmentFolder[] @relation("AttachmentFolderUpdater")

  @@index([status], map: "idx_status")
  @@index([createdAt], map: "idx_created_at")
  @@index([deletedAt], map: "idx_deleted_at")
  @@index([creatorId], map: "idx_creator_id")
  @@index([updaterId], map: "idx_updater_id")
  @@index([status, createdAt], map: "idx_status_created")
  @@index([realName, status], map: "idx_real_name_status")
  @@map("sys_user")
}

model SysUserToken {
  id                    Int       @id @default(autoincrement()) @map("id")
  userId                Int       @map("user_id")
  accessToken           String    @map("access_token") @db.VarChar(512)
  refreshToken          String    @map("refresh_token") @db.VarChar(512)
  accessTokenExpiresAt  DateTime  @map("access_token_expires_at") @db.DateTime(0)
  refreshTokenExpiresAt DateTime  @map("refresh_token_expires_at") @db.DateTime(0)
  isRevoked             Boolean   @default(false) @map("is_revoked")
  revokedAt             DateTime? @map("revoked_at") @db.DateTime(0)
  ipAddress             String?   @map("ip_address") @db.VarChar(45)
  userAgent             String?   @map("user_agent") @db.VarChar(500)
  createdAt             DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updatedAt             DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt             DateTime? @map("deleted_at") @db.DateTime(0)

  user SysUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "idx_user_token_user_id")
  @@index([isRevoked], map: "idx_is_revoked")
  @@index([accessTokenExpiresAt], map: "idx_access_token_expires")
  @@index([refreshTokenExpiresAt], map: "idx_refresh_token_expires")
  @@index([userId, isRevoked], map: "idx_user_revoked")
  @@map("sys_user_token")
}

model SysRole {
  id              Int       @id @default(autoincrement()) @map("id")
  name            String    @unique @map("name") @db.VarChar(50)
  description     String?   @map("description") @db.VarChar(255)
  status          Int       @default(1) @map("status") @db.TinyInt
  dataScope       Int       @default(1) @map("data_scope") @db.TinyInt
  isSystemDefault Boolean   @default(false) @map("is_system_default")
  creatorId       Int?      @map("creator_id")
  createdAt       DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updaterId       Int?      @map("updater_id")
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt       DateTime? @map("deleted_at") @db.DateTime(0)
  version         Int       @default(1) @map("version")

  creator SysUser? @relation("RoleCreator", fields: [creatorId], references: [id], onUpdate: NoAction, onDelete: SetNull)
  updater SysUser? @relation("RoleUpdater", fields: [updaterId], references: [id], onUpdate: NoAction, onDelete: SetNull)

  userRoles SysUserRole[]
  roleMenus SysRoleMenu[]

  @@index([status], map: "idx_role_status")
  @@index([createdAt], map: "idx_role_created_at")
  @@index([deletedAt], map: "idx_role_deleted_at")
  @@index([creatorId])
  @@index([updaterId])
  @@map("sys_role")
}

model SysUserRole {
  id        Int       @id @default(autoincrement()) @map("id")
  userId    Int       @map("user_id")
  roleId    Int       @map("role_id")
  createdAt DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt DateTime? @map("deleted_at") @db.DateTime(0)

  user SysUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  role SysRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId], map: "uniq_user_role")
  @@index([userId], map: "idx_user_role_user_id")
  @@index([roleId], map: "idx_user_role_role_id")
  @@map("sys_user_role")
}

model SysUserDept {
  id        Int       @id @default(autoincrement()) @map("id")
  userId    Int       @map("user_id")
  deptId    Int       @map("dept_id")
  createdAt DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt DateTime? @map("deleted_at") @db.DateTime(0)

  user SysUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  dept SysDept @relation(fields: [deptId], references: [id], onDelete: Cascade)

  @@unique([userId, deptId], map: "uniq_user_dept")
  @@index([userId], map: "idx_user_dept_user_id")
  @@index([deptId], map: "idx_user_dept_dept_id")
  @@map("sys_user_dept")
}

model SysDept {
  id          Int       @id @default(autoincrement()) @map("id")
  name        String    @unique @map("name") @db.VarChar(100)
  parentId    Int?      @map("parent_id")
  status      Int       @default(1) @map("status") @db.TinyInt
  sort_order  Int       @default(0)
  description String?   @map("description") @db.VarChar(255)
  leaderId    Int?      @map("leader_id")
  creatorId   Int?      @map("creator_id")
  createdAt   DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  updaterId   Int?      @map("updater_id")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime(0)
  deletedAt   DateTime? @map("deleted_at") @db.DateTime(0)
  version     Int       @default(1) @map("version")

  parent   SysDept?  @relation("DeptParent", fields: [parentId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  children SysDept[] @relation("DeptParent")

  leader  SysUser? @relation("DeptLeader", fields: [leaderId], references: [id], onUpdate: NoAction, onDelete: SetNull)
  creator SysUser? @relation("DeptCreator", fields: [creatorId], references: [id], onUpdate: NoAction, onDelete: SetNull)
  updater SysUser? @relation("DeptUpdater", fields: [updaterId], references: [id], onUpdate: NoAction, onDelete: SetNull)

  userDepts SysUserDept[]

  @@index([status], map: "idx_dept_status")
  @@index([createdAt], map: "idx_dept_created_at")
  @@index([deletedAt], map: "idx_dept_deleted_at")
  @@index([parentId], map: "idx_dept_parent_id")
  @@index([sort_order], map: "idx_dept_sort_order")
  @@index([leaderId])
  @@index([creatorId])
  @@index([updaterId])
  @@map("sys_dept")
}

