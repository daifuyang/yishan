{
  "name": "@zerocmf/yishan",
  "version": "1.0.0",
  "description": "移山快速开发平台 - 基于 Next.js 15 + TypeScript + Tailwind CSS 的现代化全栈开发解决方案",
  "scripts": {
    "build": "pnpm run /build:.*/",
    "dev:admin": "pnpm --filter yishan-admin dev",
    "dev:docs": "pnpm --filter yishan-docs start",
    "dev:shadcn": "pnpm --filter @zerocmf/yishan-shadcn dev",
    "dev:shadcn:playground": "pnpm --filter @zerocmf/yishan-shadcn dev:playground",
    "build:admin": "pnpm --filter yishan-admin build",
    "build:docs": "pnpm --filter yishan-docs build",
    "build:shadcn": "pnpm --filter @zerocmf/yishan-shadcn build",
    "build:all": "pnpm run build:shadcn && pnpm run build:admin && pnpm run build:docs",
    "preview:admin": "pnpm --filter yishan-admin start",
    "preview:docs": "pnpm --filter yishan-docs serve",
    "preview:shadcn": "pnpm --filter @zerocmf/yishan-shadcn preview:playground",
    "lint": "pnpm run /lint:.*/",
    "lint:admin": "pnpm --filter yishan-admin lint",
    "lint:docs": "pnpm --filter yishan-docs typecheck",
    "lint:shadcn": "pnpm --filter @zerocmf/yishan-shadcn lint",
    "clean": "pnpm -r exec rm -rf .next dist node_modules/.cache",
    "type-check": "pnpm -r run type-check || true",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "monorepo",
    "shadcn-ui",
    "admin-template",
    "react"
  ],
  "author": "yishan",
  "license": "MIT",
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-preserve-directives": "^1.1.3"
  }
}